{
	"name": "anthroprose",
	"hostname":"anthroprose.com",
	"description": "The base role for Anthroprose.com",
	"instance_role": "anthroprose",
	"run_list": [
	    "recipe[anthroprose::init]",
		"recipe[apt]",
		"recipe[php]",
		"recipe[git]",
		"recipe[chef-solo-search]",
		"recipe[user::data_bag]",
		"recipe[nginx]",
		"recipe[mysql::server]",
 		"recipe[anthroprose]",
 		"recipe[openvpn]",
		"recipe[openvpn::users]",
		"recipe[postfix::server]"
	],
  	"region" : "us-east-1",
	"users": ["acorley"],
	"dependencies" : [
		"htop",
		"libpcre3-dev",
		"php5-suhosin",
		"php5-mcrypt",
		"php5-tidy",
		"php5-xdebug",
		"php5-dev",
		"php5-mysql",
		"libonig-dev",
		"libqdbm-dev",
		"uwsgi",
		"uwsgi-plugin-cgi",
		"dovecot-imapd",
		"aspell",
		"build-essential",
		"libxslt1.1",
		"libxslt1-dev",
		"libxml2",
		"libmysqlclient-dev",
		"libmysql-ruby",
		"libssl-dev",
		"libopenssl-ruby",
		"libcurl4-openssl-dev",
		"imagemagick",
		"libmagickwand-dev",
		"git-core",
		"redis-server",
		"libffi-dev",
		"libffi-ruby",
		"libsqlite3-dev",
		"libpq-dev",
		"libreadline5",
		"openjdk-7-jre",
		"nodejs",
		"libncurses5-dev"
	],
	"openvpn" : {
		"key" : {
			"province" : "TX",
    		"city" : "Austin",
			"org" : "anthroprose",
			"email" : "anthroprose@anthroprose.com"
    	},
    	"local" : "",
    	"proto" : "udp",
    	"port" : "54",
    	"subnet" : "10.0.44.0",
		"netmask" : "255.255.255.0",
		"routes" : [""]
	},
	"authorization" : {
		"sudo" : {
			"passwordless" : true,
			"users" : ["ubuntu", "acorley"]
		}
    },
	"postfix" : {
		"mail_relay_networks" : ["10.0.44.0/24","127.0.0.1/32"],
		"myorigin":"anthroprose.com",
		"mydomain":"anthroprose.com"
	},
	"mysql" : {
		"bind_address" : "127.0.0.1"
	},
	"nginx" : {
		"default_domain" : "anthroprose.com",
		"default_site_enabled" : false,
		"sites" : [
			{ "domain":"mail.anthroprose.com", "uwsgi_port":"2100", "directory":"/opt/horde" },
			{ "domain":"www.anthroprose.com", "uwsgi_port":"2101", "directory":"/opt/wordpress" },
			{ "domain":"reader.anthroprose.com", "https":"true", "uwsgi_port":"2102", "directory":"/opt/tinytinyrss" },
			{ "domain":"me.anthroprose.com", "https":"true", "proxy":"true", "proxy_location":"http://localhost:3000", "directory":"/opt/diaspora/public" }
		]
	},
	"horde" : {
		"directory" : "/opt/horde",
		"db" : {
			"database" : "horde"
		}
	},
	"wordpress" : {
		"dir" : "/opt/wordpress",
		"db" : {
			"user" : "wordpress",
			"database" : "wordpress"
		},
		"keys" : {
		}
	},
	"tinytinyrss" : {
		"dir" :"/opt/tinytinyrss",
		"domain" : "https://reader.anthroprose.com",
		"email" : "anthroprose@gmail.com",
		"db" : {
            "database" : "tinytinyrss"
        }
	},
	"diaspora" : {
	   "dir" : "/opt/diaspora",
	   "pod_name" : "anthroprose",
	   "domain" : "https://me.anthroprose.com",
	   "admin" : "anthroprose",
	   "admin_email" : "anthroprose@gmail.com",
	   "enable_registrations" : "false",
	   "require_ssl" : "false"
	}
}

