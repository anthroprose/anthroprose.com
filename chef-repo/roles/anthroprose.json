{
	"name": "anthroprose",
	"hostname":"anthroprose.com",
	"timezone":"CST",
	"description": "The base role for Anthroprose.com",
	"instance_role": "anthroprose",
	"run_list": [
	    "recipe[anthroprose::init]",
		"recipe[apt]",
		"recipe[php]",
		"recipe[git]",
		"recipe[chef-solo-search]",
		"recipe[user::data_bag]",
		"recipe[sudo]",
		"recipe[nginx]",
		"recipe[mysql::server]",
		"recipe[openvpn]",
        "recipe[openvpn::users]",
 		"recipe[anthroprose]",
 		"recipe[diaspora]",
		"recipe[postfix::server]"
	],
  	"region" : "us-east-1",
	"users": ["acorley"],
	"dependencies" : [
		"htop",
		"libpcre3-dev",
		"php5-mcrypt",
		"php5-tidy",
		"php5-xdebug",
		"php5-dev",
		"php5-mysql",
		"php5-imap",
		"libonig-dev",
		"libqdbm-dev",
		"uwsgi",
		"uwsgi-plugin-cgi",
		"dovecot-imapd",
		"dovecot-mysql",
		"aspell",
		"memcached",
		"build-essential",
		"libxslt1.1",
		"libxslt1-dev",
		"libxml2",
		"libmysqlclient-dev",
		"libmysql-ruby",
		"libssl-dev",
		"libopenssl-ruby",
		"libcurl4-openssl-dev",
		"imagemagick",
		"libmagickwand-dev",
		"php5-imagick",
		"php5-memcache",
		"git-core",
		"redis-server",
		"libffi-dev",
		"libffi-ruby",
		"libsqlite3-dev",
		"libpq-dev",
		"libreadline5",
		"openjdk-7-jre",
		"nodejs",
		"libncurses5-dev",
		"libapr1",
		"libaprutil1",
		"libaprutil1-dbd-sqlite3",
		"libaprutil1-ldap",
		"php-xml-parser",
		"php5-gd",
		"php5-sqlite",
		"libfuse-dev",
		"encfs",
		"fuse-utils",
		"xfsprogs",
		"xfsdump"
