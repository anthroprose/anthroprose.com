#!/bin/sh

set -e
 
cmd () {
 
	case $1 in
		start)
			echo $DAEMON_OPTS
			start-stop-daemon --start --quiet --pidfile $PID \
			--exec $DAEMON -- $DAEMON_OPTS || true
			echo "Starting with config: $RAILS_ROOT/config/unicorn.rb"
		;;
		stop)
			start-stop-daemon --stop --quiet --pidfile $PID || true
			echo "Stopping with config: $RAILS_ROOT/config/unicorn.rb"
		;;
		restart|reload)
			start-stop-daemon --stop --quiet --pidfile $PID || true
			echo "Stopping with config: $RAILS_ROOT/config/unicorn.rb"
			sleep 1
			start-stop-daemon --start --quiet --pidfile $PID \
			--exec $DAEMON -- $DAEMON_OPTS || true
			echo "Starting with config: $RAILS_ROOT/config/unicorn.rb"
		;;
		*)
			echo >&2 "Usage: $0 <start|stop|restart>"
			exit 1
		;;
	esac
}
 
setup () {
 
	export PID=/var/run/diaspora.pid
	export OLD_PID="$PID.oldbin"
	 
	DAEMON="/opt/diaspora/script/server"
	DAEMON_OPTS=""
	
}
 
start_stop () {
	setup
	cmd $1
}
 
ARGS="$1 $2"
start_stop $ARGS